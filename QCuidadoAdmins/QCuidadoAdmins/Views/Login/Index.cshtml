@model QCuidadoAdmins.Models.Funcionario
@{
    ViewBag.Title = "Login";
    Layout = null;
}

@using (Html.BeginForm("Index", "Login", FormMethod.Post, new { htmlAttributes = new { @class = "overflow-hidden" } }))
{
    <!doctype html>
    <html lang="pt-br">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="~/Content/cssmanual/logincss.css" />
    </head>
    <body>
        <div class="main-login">

            <div class="left-login">
                <h1>Área Administrativa</h1>
                <img src="~/Content/img/logo.png" class="image" alt="logo" />
            </div>
            <div class="right-login">
                <div class="card-login">
                    <h1>Login</h1>
                    <div class="textfield">
                        <label for="usuario"><b>Email @Html.ValidationMessageFor(model => model.EMAIL_FUNCIONARIO, "", new { @class = "text-danger", @style = "color:red" })</b></label>
                        @Html.EditorFor(model => model.EMAIL_FUNCIONARIO, new { htmlAttributes = new { @class = "form__input", @placeholder = "Email" } })
                    </div>
                    <div class="textfield">
                        <label for="senha"><b>Senha @Html.ValidationMessageFor(model => model.SENHA_FUNCIONARIO, "", new { @class = "text-danger", @style = "color:red" })</b></label>
                        @Html.EditorFor(model => model.SENHA_FUNCIONARIO, new { htmlAttributes = new { @class = "form__input", @placeholder = "Senha", @type = "password" } })
                    </div>
                    <input type="submit" value="Entrar" class="btn-login" />
                    <p>@ViewBag.msgLogar</p>
                </div>
            </div>

        </div>
    </body>
</html>
}