@model QCuidadoAdmins.Models.Servicos

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <link rel="stylesheet" href="~/Content/cssmanual/forms.css" />
</head>
<body>
    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.AGENDASERVICO_ID)
        <div class="forms">
            <div class="col-md-9 col-lg-7">
                <h4 class="mb-3">Alteração de Funcionário</h4>
                <div class="row g-2">
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.TIPO_SERVICO, htmlAttributes: new { @class = "form-label" }) 
                        @Html.EditorFor(model => model.TIPO_SERVICO, new { htmlAttributes = new { @class = "form-input form-control", @placeholder = " ", @readonly = "" } })

                    </div>
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.DESC_SERVICO, htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.DESC_SERVICO, new { htmlAttributes = new { @class = "form-input form-control", @readonly = "" } })

                    </div>
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.LOCAL_INICIO, htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.LOCAL_INICIO, new { htmlAttributes = new { @class = "form-input form-control", @readonly = "" } })

                    </div>
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.LOCAL_DESTINO, htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.LOCAL_DESTINO, new { htmlAttributes = new { @class = "form-input form-control",  @readonly = "" } })

                    </div>
                    <div class="col-sm-4">
                        @Html.LabelFor(model => model.VALOR_SERVICO, htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.VALOR_SERVICO, new { htmlAttributes = new { @class = "form-input form-control", @readonly = "" } })

                    </div>
                    <div class="col-sm-4">
                        @Html.LabelFor(model => model.DATA_SERVICO, htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.DATA_SERVICO, new { htmlAttributes = new { @class = "form-input form-control", @readonly="" } })

                    </div>
                    <div class="col-sm-4">
                        @Html.LabelFor(model => model.HORARIO, htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.HORARIO, new { htmlAttributes = new { @class = "form-input form-control", @readonly="" } })

                    </div>
                    <div class="col-sm-3">
                        @Html.LabelFor(model => model.HORARIO_TERMINO, htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.HORARIO_TERMINO, new { htmlAttributes = new { @class = "form-input form-control", @readonly="" } })

                    </div>
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.STATUSSERVICO, htmlAttributes: new { @class = "form-label" })
                        @Html.DropDownList("STATUSSERVICO", new List<SelectListItem> {
                            new SelectListItem{ Text= "CONFIRMADO", Value="APROVADO"},
                            new SelectListItem{ Text= "RECUSADO", Value="RECUSADO" },


                            }, "Status do serviço", htmlAttributes: new { @class = "form__input p-2 form-control", @placeholder = "" })

                    </div>
                    <div class="col-sm-12">
                        @Html.LabelFor(model => model.PRESTADOR_ID, htmlAttributes: new { @class = "form-label" })
                        @Html.DropDownList("PRESTADOR_ID", (SelectList)ViewBag.Prestador, "Selecione a empresa relacionada ao prestador", htmlAttributes: new { @class = "form-input form-control", @placeholder = "" })@Html.ValidationMessageFor(model => model.PRESTADOR_ID, "", new { @class = "text-danger" })
                    </div>

                </div>
                <br />
                <div class="buttonn">
                    <input type="submit" value="Editar" class="btn btn-outline-primary" onclick="return confirm('Deseja realmente alterar?');" /> <a role="button" class="btn btn-outline-success" href="/Servico/Consultar"><i>Voltar</i></a>
                    <br />
                    <div class="erro">
                        <strong>@ViewBag.msgErro</strong>
                    </div>
                </div>
            </div>
        </div>

    }

</body>
</html>