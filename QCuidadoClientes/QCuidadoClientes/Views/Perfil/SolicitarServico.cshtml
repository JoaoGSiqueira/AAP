@model QCuidadoClientes.Models.Agendaservico
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <title>Solicitar Servico-Q Cuidado!</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Styles/reset.css">
    <link rel="stylesheet" href="~/Content/Styles/style.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat&dislpay=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
</head>

<body>
    <header>
        <div class="caixa">
            <nav>
                <h1><img src="~/Content/img/logo.png" alt="Logo do aplicativo"></h1>
                <ul>
                    <li><a href="/Home/Homepage">Home</a></li>
                    <li><a href="/Home/Servicos">Serviços</a></li>
                    <li><a href="/Home/Cadastro">Cadastro</a></li>
                    <li><a href="/Login/Login">Login</a></li>
                </ul>
            </nav>
        </div>
    </header>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <main>
            <div style="padding-left:190px;">
                <div class="col-md-9 col-lg-12">
                    <label class="mb-3" style="text-align:center; font-size:40px;">Solicitação de Serviço</label>
                    <div class="row g-2">
                        <div class="col-sm-12">
                            @Html.LabelFor(model => model.TIPO_SERVICO, htmlAttributes: new { @class = "form-label" })@Html.ValidationMessageFor(model => model.TIPO_SERVICO, "", new { @class = "text-danger" })
                            @Html.DropDownList("TIPO_SERVICO", new List<SelectListItem> {
                                new SelectListItem{ Text= "Dia a Dia", Value="Dia a Dia"},
                                new SelectListItem{ Text= "Domiciliar", Value="Domiciliar" },
                                new SelectListItem{ Text= "Hospitalar", Value="Hospitalar" },


                                }, "Selecione um Servico", htmlAttributes: new { @class = "form-input form-control", @placeholder = "" })

                        </div>
                        <div class="col-sm-12">
                            @Html.LabelFor(model => model.LOCAL_INICIO, htmlAttributes: new { @class = "form-label" })@Html.ValidationMessageFor(model => model.LOCAL_INICIO, "", new { @class = "text-danger" })
                            @Html.EditorFor(model => model.LOCAL_INICIO, new { htmlAttributes = new { @class = "form-input form-control" } })

                        </div>
                        <div class="col-sm-12">
                            @Html.LabelFor(model => model.LOCAL_DESTINO, htmlAttributes: new { @class = "form-label" })@Html.ValidationMessageFor(model => model.LOCAL_DESTINO, "", new { @class = "text-danger" })
                            @Html.EditorFor(model => model.LOCAL_DESTINO, new { htmlAttributes = new { @class = "form-input form-control" } })

                        </div>
                        <div class="col-sm-6">
                          
                                @Html.LabelFor(model => model.VALOR_SERVICO, htmlAttributes: new { @class = "form-label" })@Html.ValidationMessageFor(model => model.VALOR_SERVICO, "", new { @class = "text-danger" })
                                @Html.EditorFor(model => model.VALOR_SERVICO, new { htmlAttributes = new { @class = "form-input form-control" } })
                            


                        </div>
                        @Html.LabelFor(model => model.DESC_SERVICO, htmlAttributes: new { @class = "form-label" })@Html.ValidationMessageFor(model => model.DESC_SERVICO, "", new { @class = "text-danger" })
                        @Html.TextAreaFor(model => model.DESC_SERVICO, new { htmlAttributes = new { @class = "form-input form-control-lg" } })
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.DATA_SERVICO, htmlAttributes: new { @class = "form-label" })@Html.ValidationMessageFor(model => model.DATA_SERVICO, "", new { @class = "text-danger" })
                        @Html.EditorFor(model => model.DATA_SERVICO, new { htmlAttributes = new { @class = "form-input form-control", type = "date" } })

                    </div>
                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.HORARIO, htmlAttributes: new { @class = "form-label" })@Html.ValidationMessageFor(model => model.HORARIO, "", new { @class = "text-danger" })
                            @Html.EditorFor(model => model.HORARIO, new { htmlAttributes = new { @class = "form-input form-control", type="time" } })
                        </div>
                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.HORARIO_TERMINO, htmlAttributes: new { @class = "form-label" })@Html.ValidationMessageFor(model => model.HORARIO_TERMINO, "", new { @class = "text-danger" })
                            @Html.EditorFor(model => model.HORARIO_TERMINO, new { htmlAttributes = new { @class = "form-input form-control", type="time" } })

                        </div>
                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.PAGAMENTO_ID, htmlAttributes: new { @class = "form-label" })@Html.ValidationMessageFor(model => model.PAGAMENTO_ID, "", new { @class = "text-danger" })
                            @Html.DropDownList("PAGAMENTO_ID", new List<SelectListItem> {
                                new SelectListItem{ Text= "PIX", Value="1"},
                                new SelectListItem{ Text= "CARTÃO", Value="2" },


                                }, "Escolha de pagamento", htmlAttributes: new { @class = "form-input form-control", @placeholder = "" })

                        </div>
                    </div>
                    <br />
                    <div class="botao_enviar" style="text-align:center;">
                        <input type="submit" value="Solicitar Serviço" class="btn btn-outline-primary btn-lg" />
                        <br />
                        @if (TempData["AlertMessage"] != null)
                        {
                            <div class="alert alert-success" id="alerta">
                                <strong>@TempData["AlertMessage"]</strong>
                            </div>
                        }
                        <div class="erro">
                            <strong>@ViewBag.msgErro</strong>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    }

    <footer>
        <img src="~/Content/img/logo.png" alt="Logo do aplicativo">
        <p class="copyright">&copy;Copyright Q Cuidado! - 2022</p>
    </footer>
</body>
</html>