@model QCuidadoClientes.Models.Cliente 
@{
    Layout = null;
}

@using(Html.BeginForm("Login","Login", FormMethod.Post, new {htmlAttributes = new {@class = "overflow-hidden" } })) 
{ 
<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <title>Login-Q Cuidado!</title>
    <link rel="stylesheet" href="~/Content/Styles/reset.css">
    <link rel="stylesheet" href="~/Content/Styles/login.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat&dislpay=swap" rel="stylesheet">
</head>

<body>
    <div class="container-login">
        <div class="form-container">
            <div class="form-login">
                <h1>Login</h1>
                <div class="form-floating mb-3">
                    @Html.EditorFor(model => model.EMAIL_CLIENTE, new {htmlAttributes = new {@class = "form-control input-login", @placeholder="Email", @id="email"}})
                    <label for="email">Email</label>
                </div>
                <div class="form-floating">
                    @Html.EditorFor(model => model.SENHA_CLIENTE, new { htmlAttributes = new { @class = "form-control input-login", @placeholder = "Senha", @type = "password", @id="password" } })

                    <label for="password">Senha</label>
                </div>
                <input type="submit" value="ENTRAR" class="btn btn-success"> <br>
                <a href="/Home/Cadastro">Não possui cadastro? Clique aqui</a>
                <br />
                <p style="color:red;">@ViewBag.msgLogar</p>
            </div>
            <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.6/dist/umd/popper.min.js"
                    integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
                    crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js"
                    integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk"
                    crossorigin="anonymous"></script>
        </div>
        <div>
            <img src="~/Content/img/login.svg" class="imagem_login">
        </div>
    </div>


</body>

</html>
}